# Database connection string (contoh DSN Cicero_V2)
DATABASE_URL=postgres://cicero_user:secret@db-host:5432/Cicero_V2

# Optional: pool size for database connections
DB_POOL_MAX=10

# Optional: logging level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info

# Optional: runtime environment
NODE_ENV=development

# WhatsApp Web.js auth persistence path
WA_AUTH_PATH=./.wa-auth

# Puppeteer args (JSON array string or comma-separated list)
WA_PUPPETEER_ARGS=["--no-sandbox","--disable-setuid-sandbox"]

# WhatsApp session name for LocalAuth
WA_SESSION_NAME=cicero-v2

# Cron schedules (node-cron format)
DAILY_REPORT_CRON=0 7 * * *
WEEKLY_REPORT_CRON=0 7 * * 1
MONTHLY_REPORT_CRON=0 7 1 * *
TASK_DELIVERY_RECAP_CRON=*/30 * * * *
COMPLAINT_RESPONSE_CRON=*/5 * * * *

# Cron schedule for WA gateway polling (node-cron format)
WA_GATEWAY_POLL_CRON=*/2 * * * *
